<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_gray"
    android:orientation="vertical" >

    <include layout="@layout/top_title" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/corners_bg"
        android:orientation="vertical"
        android:padding="20dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/set_account_name"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="你的少女"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_modify_name"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:drawableTop="@drawable/set_account_persion_modification"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/set_account_phone"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_user_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="你的少女"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_modify_phone"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:drawableTop="@drawable/set_account_persion_modification"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/set_account_email"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_user_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="你的少女"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_modify_email"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:drawableTop="@drawable/set_account_persion_modification"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/set_account_city"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_user_city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="你的少女"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_modify_location"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:drawableTop="@drawable/set_account_persion_modification"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/set_account_bland"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_user_bland1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="你的少女"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_user_bland2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="你的少女"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_user_bland3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="你的少女"
                    android:textColor="@color/black" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_modify_brand"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:drawableTop="@drawable/set_account_persion_modification"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>